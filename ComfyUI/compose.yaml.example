services:
  oi25-comfyui-nvidia:
    image: mmartial/comfyui-nvidia-docker:latest
#    image: comfy:local
    container_name: oi25-comfyui-nvidia
    volumes:
      - ./run:/comfy/mnt
      - ./basedir:/basedir
#      - ./userscripts_dir:/userscripts_dir
    restart: unless-stopped
    # We are NOT exposing any ports, we will access it through the tailscale IP:8188 (find the IP from your dashboard)
    environment:
      # set WANTED_UID and WANTED_GID to your user and group as obtained with `id -u` and `id -g`
      - WANTED_UID=1000 # TODO: replace this to your user ID
      - WANTED_GID=1000 # TODO: replace this to your group ID
      - BASE_DIRECTORY=/basedir
      - SECURITY_LEVEL=normal
#      - SECURITY_LEVEL=weak
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=all
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities:
                - gpu
                - compute
                - utility
    depends_on:
      - tailscale-oi25-comfyui
    network_mode: service:tailscale-oi25-comfyui

# https://tailscale.com/kb/1282/docker
  tailscale-oi25-comfyui:
    image: tailscale/tailscale:latest
    container_name: tailscale-oi25-comfyui
    hostname: tailscale-oi25-comfyui
    environment:
      - TS_AUTHKEY=tskey-auth- # TODO: Add your TS_AUTHKEY here
      - TS_STATE_DIR=/var/lib/tailscale
      - TS_USERSPACE=false
    volumes:
      - .ts:/var/lib/tailscale
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - net_admin
    restart: unless-stopped
